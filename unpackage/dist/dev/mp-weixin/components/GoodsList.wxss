.goods-list {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods-list .goods-item {
  width: 355rpx;
  background-color: #fff;
  margin: 10rpx 0;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.goods-list .goods-item image {
  width: 80%;
  height: 300rpx;
  display: block;
  margin: auto;
}
.goods-list .goods-item .price {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.goods-list .goods-item .price text:first-of-type {
  color: #b50e03;
  font-size: 30rpx;
}
.goods-list .goods-item .price text:last-of-type {
  color: #bbb;
  font-size: 28rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}
.goods-list .goods-item .name {
  font-size: 30rpx;
  line-height: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 15rpx;
}

